<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        {{ include('navbar.html.twig') }}

        <h2 style="text-align: center;margin-top: 50px">Заполните форму для заключения договора</h2>

        <form method="POST" style="margin-top: 100px;margin-left: 620px" action="http://localhost:8000/credits/store">
            <label>Клиент</label>
            <select name="clientId" class="form-select" style="width: 50%">
                {% for client in clients %}
                    <option value="{{ client.id }}">
                        {{ client.firstName }} {{ client.lastName }} ({{ client.passportId }})
                    </option>
                {% endfor %}
            </select>

            <br>

            <label>Кредитный план</label>
            <select name="creditPlanId" class="form-select" style="width: 50%">
                {% for creditPlan in creditPlans %}
                    <option value="{{ creditPlan.id }}">
                        {{ creditPlan.name }} под {{ creditPlan.percent }} процента
                        (минимальная сумма {{ creditPlan.minAmount}} бел. рублей)
                    </option>
                {% endfor %}
            </select>

            <br>

            <label class="form-check-label">Создать карточку</label>
            <input type="checkbox" id="isCardNeeded" class="form-check-input" name="isCardNeeded">

            <br>
            <br>

            <label>Сумма</label>
            <input id="amount" name="amount" style="width: 50%" class="form-control">

            <br>

            <input type="submit" class="btn btn-primary" value="Сохранить">
        </form>
    </body>
</html>