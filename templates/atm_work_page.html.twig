<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        {{ include('navbar.html.twig') }}

        <h2 style="text-align: center; margin-top: 50px">Баланс: {{ balance }} бел. рублей</h2>
        <h2 style="text-align: center; margin-top: 50px">Выберите опцию</h2>

        <br><br>

        <div class="list-group">
            <form method="POST" action="http://localhost:8000/atm/cash-page">
                <input type="hidden" name="creditId" value="{{ creditId }}">
                <button type="submit" class="list-group-item list-group-item-action">
                    Снять деньги
                </button>
            </form>
            <form method="POST" action="http://localhost:8000/atm/transfer-page">
                <input type="hidden" name="creditId" value="{{ creditId }}">
                <button type="submit" class="list-group-item list-group-item-action">
                    Перевести деньги
                </button>
            </form>
        </div>

    </body>
</html>