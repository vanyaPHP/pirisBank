    <body>
        {{ include('navbar.html.twig') }}

        <h3 style="text-align: center; margin-top: 50px">Перевести деньги</h3>

        <form method="POST" style="margin-top: 100px;margin-left: 620px" action="http://localhost:8000/atm/transfer">
            <input type="hidden" name="creditId" value="{{ creditId }}">

            <label>Введите номер счёта</label>
            <input type="text" id="accountNumber" style="width: 50%" class="form-control" name="accountNumber">

            <label>Введите сумму</label>
            <input type="text" id="amount" style="width: 50%" class="form-control" name="amount">

            <br>

            <input type="submit" class="btn btn-primary" value="Перевести">
        </form>
    </body>
</html>